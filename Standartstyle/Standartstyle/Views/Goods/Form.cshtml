@model Standartstyle.Models.GoodModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Styles.Render("~/Content/fileuploader")
<div class="container-fluid">
    <div class="row clearfix"></div>
    <div class="form-group col-md-12">
        @using (Ajax.BeginForm("SaveGood", "Goods", new AjaxOptions
        {
            UpdateTargetId = "steps",
            HttpMethod = "Post",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "successCallback",
            OnFailure = "failureCallback",
            OnBegin = "hideHeader"
        }, new { id = "ContractForm" }))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.Size, new { @class = "col-form-label" })
                        @Html.TextBoxFor(m => m.Size, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Description, new { @class = "col-form-label" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                <div class="row">
                    <div class="form-group col-md-12">
                        <div class="file-loading">
                            <input id="fileform" class="file" type="file" multiple data-min-file-count="1">
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/fileupload")
<script>
    $('#fileform').fileinput({
        theme: 'explorer-fa',
        overwriteInitial: false,
        uploadAsync: false,
        language: 'ru',
        uploadUrl: '@Url.Action("UploadFiles", "Image")',
        allowedFileExtensions: ['jpg', 'png', 'jpeg']
    });

    $('#fileform').on('filebatchuploadsuccess', function (event, data, previewId, index) {
        var form = data.form, files = data.files, extra = data.extra,
            response = data.response, reader = data.reader;
        console.log('File batch upload success');
    });

</script>