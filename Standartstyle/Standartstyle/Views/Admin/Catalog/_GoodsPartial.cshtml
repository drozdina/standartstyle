@model IEnumerable<Standartstyle.Models.GoodModel>


<div class="row pt-3">
    @foreach (var good in Model)
            {
        <div class="col-md-4 col-sm-12">
            <div class="card mb-4 box-shadow">
                <div>
                    <div class="thumbnail bg-light my-0 px-2 py-2">
                        <img src="@Url.Content(good.Images[good.MainImageIndex].Path+good.Images[good.MainImageIndex].GetFullFilenameForStoredFile())"
                             name="@good.Images[good.MainImageIndex].Name"
                             alt="@good.Images[good.MainImageIndex].Name"
                             class="rounded img-fluid vertical-middle">
                    </div>
                </div>
            </div>

            <div class="row pt-3">
                @foreach (var good in Model)
            {
                    <div class="col-md-4 col-sm-12">
                        <div class="card mb-4 box-shadow">

                            <div class="bg-light my-0 px-2 py-2">
                                <div class="text-center" style="height: 200px; white-space: nowrap;">
                                    <span class="vertical-middle h-100" style="display:inline-block; margin-left: -5px;"></span>
                                    <img src="@Url.Content(good.Images[0].Path+good.Images[0].GetFullFilenameForStoredFile())"
                                         name="@good.Images[0].Name"
                                         alt="@good.Images[0].Name"
                                         class="mw-100 mh-100 rounded">
                                </div>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Название: @good.Name<br>Категория: @good.SelectedCategory.Name</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Form", "Goods", new { id = good.GoodCode })"><span class="oi oi-pencil"></span></a>
                                        <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Form", "Goods", new { id = good.GoodCode })"><span class="oi oi-sun"></span></a>
                                        <a class="btn btn-sm btn-outline-secondary btn-danger" href="@Url.Action("Form", "Goods", new { id = good.GoodCode })"><span class="oi oi-trash"></span></a>
                                    </div>
                                    <small class="text-muted"><span class="oi oi-eye"></span>&nbsp;@good.ViewsCount</small>

                                </div>
                            </div>
                        </div>
                        <small class="text-muted"><span class="oi oi-eye"></span>&nbsp;@good.ViewsCount</small>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
